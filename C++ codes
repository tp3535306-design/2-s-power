program of 2's power

#include <iostream>
using namespace std;

class power {
public:
    void is_power_2(int n) {
        if (n <= 0) {
            cout << n << " is NOT a power of 2";
            return;
        }

        int i = 0, k = n;

        while (n % 2 == 0) {
            n = n / 2;
            i++;
        }

        if (n == 1) {
            cout << k << " comes in " << i;
            if (i == 1) cout << "st";
            else if (i == 2) cout << "nd";
            else if (i == 3) cout << "rd";
            else cout << "th";
            cout << " power of 2";
        } else {
            cout << k << " does NOT come in power of 2";
        }
    }
};

int main() {
    int n;
    cout << "Enter number: ";
    cin >> n;

    power aa;
    aa.is_power_2(n);
    return 0;
}

program for fibonacci series

#include <iostream>
using namespace std;
class factorial{
    private:
    int i=1, x, y, z;
    public:
    void fact(int n)
    {
        x=0;
        y=1;
        z=0;
        while(i<=n)
        {
            cout<<z<<ends;
            x=y;
            y=z;
            z=x+y;
            i++;
        }
    }
};
int main() {
int n;
cout<<"Enter number of terms to print fibonacci series: ";
cin>>n;
factorial aa;
aa.fact(n);

    return 0;
}

Maximum product of two numbers in array

#include <iostream>
using namespace std;

int main() {
    int a[100], max, smax, n, i, pro;

    cout<<"\nEnter size of array(max 100): ";
    cin>>n;

    cout<<"\nEnter "<<n<<" elements: ";
    for(i=0; i<n; i++)
        cin>>a[i];

    cout<<"\nYour array is: ";
    for(i=0; i<n; i++)
        cout<<a[i]<<ends;

    max = a[0];

    // Find maximum
    for(i=1; i<n; i++)
    {
        if(a[i] > max)
            max = a[i];
    }

    smax = -1;   // Important change

    // Find second maximum
    for(i=0; i<n; i++)
    {
        if(a[i] > smax && a[i] < max)
            smax = a[i];
    }

    pro = max * smax;

    cout<<"\nMaximum product in given array is "
        <<pro<<" made up of "<<max<<" & "<<smax;

    return 0;
}
