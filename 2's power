#include <iostream>
using namespace std;

class power {
public:
    void is_power_2(int n) {
        if (n <= 0) {
            cout << n << " is NOT a power of 2";
            return;
        }

        int i = 0, k = n;

        while (n % 2 == 0) {
            n = n / 2;
            i++;
        }

        if (n == 1) {
            cout << k << " comes in " << i;
            if (i == 1) cout << "st";
            else if (i == 2) cout << "nd";
            else if (i == 3) cout << "rd";
            else cout << "th";
            cout << " power of 2";
        } else {
            cout << k << " does NOT come in power of 2";
        }
    }
};

int main() {
    int n;
    cout << "Enter number: ";
    cin >> n;

    power aa;
    aa.is_power_2(n);
    return 0;
}
